<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/startmargin"
        android:text="Description"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/startmargin"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/startmargin"
        android:layout_marginTop="@dimen/startmargin">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/icon1"
            android:layout_centerVertical="true"
            android:background="@drawable/button_shape_red_oval"
            android:backgroundTint="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple Full Sleeves"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/icon1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/startmargin"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/icon2"
            android:layout_centerVertical="true"
            android:background="@drawable/button_shape_red_oval"
            android:backgroundTint="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual fit that is true to size"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/icon2"/>
    </RelativeLayout>

</LinearLayout>