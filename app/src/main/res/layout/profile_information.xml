<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <com.io.choozo.custom.CircularImageView
                android:id="@+id/civ_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/man"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greybackground"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/person"
                    android:background="@drawable/ic_person_outline_black_24dp"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Johan Smith"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                   android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/person"
                    android:layout_marginLeft="20dp"/>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greybackground"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/email"
                    android:background="@drawable/ic_email_black_24dp"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="johansmith@domain.com"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/email"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greybackground"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/phone"
                    android:background="@drawable/ic_phone_black_24dp"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+91 9856241258"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/phone"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greybackground"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/changepassword"
                    android:background="@drawable/ic_lock_outline_black_24dp"
                    android:backgroundTint="@color/red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Change Password"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/changepassword"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greybackground"></View>
        </LinearLayout>
    </ScrollView>

</LinearLayout>