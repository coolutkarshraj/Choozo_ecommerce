<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shopbackground11"
    tools:context=".activity.loginRegistrationflow.ForgotPasswodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">


        <ImageView android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_arrow"
            android:backgroundTint="@color/black"

            android:id="@+id/back"
            android:layout_centerVertical="true"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/startmargin"
            android:fontFamily="@font/segoeuib"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/seguisb"
            android:text="Not sure, if you password is secured!
Reset your password here..."/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/h2"
            android:fontFamily="@font/seguisb"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/et_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            android:fontFamily="@font/segoeui"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/h2"
            android:fontFamily="@font/seguisb"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            android:fontFamily="@font/segoeui"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColorHint="@color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forgotpassword"
            android:layout_marginTop="30dp"
            android:text="Change PAssword"
            android:id="@+id/btnrquest"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/h1"
            android:fontFamily="@font/seguisb"
            android:layout_marginStart="@dimen/startmargin"
            android:layout_marginEnd="@dimen/endmargin"
            android:background="@drawable/button_shape_red"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</LinearLayout>