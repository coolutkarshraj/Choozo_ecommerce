<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <corners
                android:radius="100dp"
                />
            <solid android:color="@color/white"/>
            <stroke android:color="#BBB7B7" android:width="1dp" />
          />

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="50dp"
                android:height="30dp"
                />
        </shape>
    </item>
</selector>